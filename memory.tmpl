 * \param array Pointer to the dynamic integer array.
 * \param index The index of the integer to remove.
 */
void remove_int(int_array * array, int index)
{
	int i;
	
	if(index <= array->size)
	{
		// memcopy??
		for(i = index; i < array->size; i++)
		{
			array->array[i] = array->array[i+1];
		}
		array->size--;
	}
}

